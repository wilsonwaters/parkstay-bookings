<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- Allow JIT compilation (required for V8 engine) -->
	<key>com.apple.security.cs.allow-jit</key>
	<true/>

	<!-- Allow unsigned executable memory (required for Electron) -->
	<key>com.apple.security.cs.allow-unsigned-executable-memory</key>
	<true/>

	<!-- Allow loading of dynamic libraries -->
	<key>com.apple.security.cs.allow-dyld-environment-variables</key>
	<true/>

	<!-- Network access (required for ParkStay API) -->
	<key>com.apple.security.network.client</key>
	<true/>

	<!-- Optional: Server capability if needed -->
	<key>com.apple.security.network.server</key>
	<true/>

	<!-- File system access -->
	<key>com.apple.security.files.user-selected.read-write</key>
	<true/>

	<!-- Allow reading from Downloads folder -->
	<key>com.apple.security.files.downloads.read-write</key>
	<true/>

	<!-- Disable audio/video capture (not needed for this app) -->
	<key>com.apple.security.device.audio-input</key>
	<false/>
	<key>com.apple.security.device.camera</key>
	<false/>

	<!-- Disable unnecessary permissions -->
	<key>com.apple.security.device.usb</key>
	<false/>
	<key>com.apple.security.device.bluetooth</key>
	<false/>
	<key>com.apple.security.print</key>
	<false/>

	<!-- App Sandbox - Disabled for desktop app -->
	<!-- Enable if you want to distribute via Mac App Store -->
	<!-- <key>com.apple.security.app-sandbox</key> -->
	<!-- <true/> -->
</dict>
</plist>
