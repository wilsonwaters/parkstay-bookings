{
  "appId": "com.parkstay.bookings",
  "productName": "WA ParkStay Bookings",
  "copyright": "Copyright Â© 2025-2026",
  "asar": true,
  "directories": {
    "output": "release",
    "buildResources": "resources"
  },
  "files": [
    "dist/**/*",
    "package.json",
    "node_modules/**/*"
  ],
  "extraResources": [
    {
      "from": "resources/icons",
      "to": "icons",
      "filter": ["**/*"]
    }
  ],
  "mac": {
    "category": "public.app-category.utilities",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "zip",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "resources/icons/icon.icns",
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "resources/entitlements.mac.plist",
    "entitlementsInherit": "resources/entitlements.mac.plist",
    "darkModeSupport": true,
    "minimumSystemVersion": "10.15.0",
    "type": "distribution",
    "artifactName": "${productName}-${version}-${arch}.${ext}",
    "publish": {
      "provider": "github",
      "owner": "wilsonwaters",
      "repo": "parkstay-bookings"
    }
  },
  "dmg": {
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ],
    "title": "${productName} ${version}",
    "icon": "resources/icons/icon.icns",
    "iconSize": 128,
    "window": {
      "width": 540,
      "height": 380
    },
    "backgroundColor": "#ffffff",
    "sign": false
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "resources/icons/icon.ico",
    "artifactName": "${productName}-Setup-${version}.${ext}",
    "requestedExecutionLevel": "asInvoker",
    "signingHashAlgorithms": ["sha256"],
    "signDlls": false,
    "verifyUpdateCodeSignature": false,
    "publish": {
      "provider": "github",
      "owner": "wilsonwaters",
      "repo": "parkstay-bookings"
    }
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "allowElevation": true,
    "installerIcon": "resources/icons/icon.ico",
    "uninstallerIcon": "resources/icons/icon.ico",
    "installerHeader": "resources/icons/installer-header.png",
    "installerSidebar": "resources/icons/installer-sidebar.png",
    "uninstallerSidebar": "resources/icons/installer-sidebar.png",
    "createDesktopShortcut": "always",
    "createStartMenuShortcut": true,
    "shortcutName": "${productName}",
    "perMachine": false,
    "runAfterFinish": true,
    "deleteAppDataOnUninstall": false,
    "menuCategory": false,
    "displayLanguageSelector": false,
    "installerLanguages": ["en_US"],
    "language": "1033",
    "multiLanguageInstaller": false,
    "packElevateHelper": true,
    "differentialPackage": true,
    "include": "resources/installer.nsh"
  },
  "portable": {
    "artifactName": "${productName}-Portable-${version}.${ext}"
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "deb",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "rpm",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "resources/icons",
    "category": "Utility",
    "desktop": {
      "Name": "WA ParkStay Bookings",
      "Comment": "Automated booking tool for WA ParkStay",
      "Categories": "Utility;Office;",
      "Keywords": "parkstay;booking;camping;automation;",
      "StartupWMClass": "parkstay-bookings"
    },
    "artifactName": "${productName}-${version}-${arch}.${ext}",
    "synopsis": "Automated campground booking for WA ParkStay",
    "description": "Desktop application for automating campground bookings on the Western Australia Parks and Wildlife Service ParkStay system.",
    "maintainer": "wilsonwaters@users.noreply.github.com",
    "vendor": "WA ParkStay Bookings",
    "publish": {
      "provider": "github",
      "owner": "wilsonwaters",
      "repo": "parkstay-bookings"
    }
  },
  "appImage": {
    "license": "LICENSE",
    "artifactName": "${productName}-${version}-${arch}.${ext}"
  },
  "deb": {
    "depends": [
      "gconf2",
      "gconf-service",
      "libnotify4",
      "libappindicator1",
      "libxtst6",
      "libnss3"
    ],
    "priority": "optional",
    "compression": "xz",
    "artifactName": "${productName}-${version}-${arch}.${ext}"
  },
  "rpm": {
    "depends": [
      "libnotify",
      "libappindicator-gtk3",
      "libXtst",
      "nss"
    ],
    "fpm": ["--rpm-compression", "xz"],
    "artifactName": "${productName}-${version}-${arch}.${ext}"
  },
  "publish": {
    "provider": "github",
    "owner": "wilsonwaters",
    "repo": "parkstay-bookings"
  },
  "compression": "maximum",
  "removePackageScripts": true,
  "npmRebuild": true,
  "buildDependenciesFromSource": false,
  "nodeGypRebuild": false,
  "electronCompile": false,
  "electronDist": "node_modules/electron/dist",
  "electronVersion": "28.0.0",
  "extends": null
}
